<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_scene"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/scene_bg_color"
    tools:context="com.dechnic.omsdcapp.scene.AddSceneActivity">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_actionbar_height"
        android:background="@color/main_color">

        <RelativeLayout
            android:id="@+id/back_Rel"
            android:layout_width="@dimen/activity_actionbar_height"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_icon" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加场景"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <RelativeLayout
            android:id="@+id/saveRel"
            android:layout_width="@dimen/activity_actionbar_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/bar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/scene_lin"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="场景名称"
                        android:textColor="#313131"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/scene_name_et"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请填写场景名称"
                        android:textColorHint="#989898"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grid_line"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="图标选择"
                        android:textColor="#313131"
                        android:textSize="16sp"/>
                    <ImageView
                        android:id="@+id/go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/goselect_icon"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/goIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/go"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp">
                    <RelativeLayout
                        android:id="@+id/job_rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/samll_job_modle_icon"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            />
                        <ImageView
                            android:id="@+id/job_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/scene_select"
                            android:layout_toRightOf="@+id/iv1"
                            android:layout_above="@id/iv1"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            />

                        <ImageView
                            android:id="@+id/job_ivs"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_toRightOf="@+id/iv1"
                            android:layout_above="@id/iv1"
                            android:visibility="visible"
                            android:layout_marginBottom="10dp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rest_rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/samll_rest_moldle_icon"
                            android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"/>
                        <ImageView
                            android:id="@+id/rest_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/scene_select"
                            android:layout_toRightOf="@+id/iv2"
                            android:layout_above="@id/iv2"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            />

                        <ImageView
                            android:id="@+id/rest_ivs"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_toRightOf="@+id/iv2"
                            android:layout_above="@id/iv2"
                            android:visibility="visible"
                            android:layout_marginBottom="10dp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/out_rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/samll_out_modle_icon"
                            android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"/>
                        <ImageView
                            android:id="@+id/out_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/scene_select"
                            android:layout_toRightOf="@+id/iv3"
                            android:layout_above="@id/iv3"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            />

                        <ImageView
                            android:id="@+id/out_ivs"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_toRightOf="@+id/iv3"
                            android:layout_above="@id/iv3"
                            android:visibility="visible"
                            android:layout_marginBottom="10dp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/long_rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/small_longrest_modle_icon"
                            android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"/>
                        <ImageView
                            android:id="@+id/long_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/scene_select"
                            android:layout_toRightOf="@+id/iv4"
                            android:layout_above="@id/iv4"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            />

                        <ImageView
                            android:id="@+id/long_ivs"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_toRightOf="@+id/iv4"
                            android:layout_above="@id/iv4"
                            android:visibility="visible"
                            android:layout_marginBottom="10dp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/week_rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/samll_week_modle_icon"
                            android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"/>
                        <ImageView
                            android:id="@+id/week_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/scene_select"
                            android:layout_toRightOf="@+id/iv5"
                            android:layout_above="@id/iv5"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            />

                        <ImageView
                            android:id="@+id/week_ivs"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_toRightOf="@+id/iv5"
                            android:layout_above="@id/iv5"
                            android:visibility="visible"
                            android:layout_marginBottom="10dp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/green_rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/iv6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/samll_green_modle_icon"
                            android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"/>
                        <ImageView
                            android:id="@+id/green_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/scene_select"
                            android:layout_toRightOf="@+id/iv6"
                            android:layout_above="@id/iv6"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            />

                        <ImageView
                            android:id="@+id/green_ivs"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_toRightOf="@+id/iv6"
                            android:layout_above="@id/iv6"
                            android:visibility="visible"
                            android:layout_marginBottom="10dp"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scene_lin"
                android:text="设备"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:id="@+id/add_device_rel1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv3"
                android:visibility="visible"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/iv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_scenedevice_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv7"
                        android:layout_centerVertical="true"
                        android:text="添加设备"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/main_color"/>
                </RelativeLayout>
            </RelativeLayout>

            <com.dechnic.omsdcapp.widget.ListViewforScrollView
                android:id="@+id/device_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:divider="@color/white"
                android:dividerHeight="0dp"
                android:layout_marginTop="10dp">
            </com.dechnic.omsdcapp.widget.ListViewforScrollView>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/add_device_rel2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/iv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add_scenedevice_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv8"
                android:layout_centerVertical="true"
                android:text="添加设备"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/main_color"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
