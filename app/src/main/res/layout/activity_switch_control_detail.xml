<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_switch_control_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/switch_online_open"
    >
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_actionbar_height">

        <RelativeLayout
            android:id="@+id/back_Rel"
            android:layout_width="@dimen/activity_actionbar_height"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/back_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/switch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="开关名字"/>
    </RelativeLayout>
    <!--在线且打开状态-->
    <RelativeLayout
        android:id="@+id/onLine_Open_Lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/headIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/switch_detail_open_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"/>

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开关已开启"
            android:layout_below="@id/headIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:id="@+id/control_Rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/switch_and_socket_bottom_icon"
            android:layout_alignParentBottom="true">
            <ImageView
            android:id="@+id/control_icon_toclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/switch_contraol_icon_online"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"/>

            <ImageView
                android:id="@+id/control_icon_toopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/switch_contraol_icon_online"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:layout_marginTop="28dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/control_Rel"
            android:layout_marginBottom="15dp">
            <RelativeLayout
                android:id="@+id/switch_dingshi_newRel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/switch_dingshi_newIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/switch_dingshi_open_new"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/switch_dingshi_newTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定时"
                    android:layout_below="@id/switch_dingshi_newIv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/switch_jinyong_newRel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/switch_jinyong_newIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/switch_jinyong_open_new"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/switch_jinyong_newTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="禁用"
                    android:layout_below="@id/switch_jinyong_newIv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/switch_qiyong_newRel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/switch_qiyong_newIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/switch_qiyong_open_new"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/switch_qiyong_newTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启用"
                    android:layout_below="@id/switch_qiyong_newIv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
